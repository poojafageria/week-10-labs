<!-- Define a function to render each subscription -->
<% function renderSubscription(subscription) { %>
<div class="item-preview">
  <a href="/single-subscription/<%= subscription._id %>">
  
    <h2>Plan: <%= subscription.plan %></h2>
    <p>Written by pooja
    </p>
  </a>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Home page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/hero.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (subscriptions.length > 0) { %>
          <!-- Call the renderSubscription function for each subscription -->
          <% subscriptions.forEach(renderSubscription); %> <% } else { %>
          <p>No subscriptions found.</p>
          <% } %>
        </div>
      </div>
    </div>
    <%- include('partials/ads.ejs') %>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
